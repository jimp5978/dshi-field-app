                            <tbody id="resultsBody"></tbody>
                        </table>
                    </div>

                    <div id="selectionInfo" class="selection-info">
                        <strong>ì„ íƒëœ í•­ëª©:</strong> <span id="selectedCount">0</span>ê°œ 
                        | <strong>ì´ ì¤‘ëŸ‰:</strong> <span id="totalWeight">0</span> kg
                    </div>
                </div>
            </div>
        </div>

        <div class="card" style="background: #f8f9fa; display: none;">
            <div class="card-header">ğŸ› Debug ì •ë³´</div>
            <div class="card-body">
                <div style="font-family: monospace; font-size: 12px; color: #666;">
                    <strong>ì‚¬ìš©ì:</strong> <%= @user_info['username'] || 'Unknown' %> (Level <%= @user_info['permission_level'] || 'N/A' %>)<br>
                    <strong>Flask API:</strong> <%= @flask_api_url %><br>
                    <strong>í˜„ì¬ ì‹œê°„:</strong> <span id="currentTime"></span><br>
                    <strong>ê²€ìƒ‰ ë¡œê·¸:</strong><br>
                    <div id="searchLog" style="max-height: 200px; overflow-y: auto; background: white; padding: 10px; margin-top: 5px; border: 1px solid #ddd;">
                        - ê²€ìƒ‰ ì¤€ë¹„ ì™„ë£Œ<br>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // ë¡œë”© ë‹¤ì´ì–¼ë¡œê·¸ í•¨ìˆ˜ë“¤
        function showLoadingDialog(title = 'ğŸ’¾ í•­ëª© ì €ì¥ ì¤‘...', message = 'ì ì‹œë§Œ ê¸°ë‹¤ë ¤ì£¼ì„¸ìš”. ì„ íƒëœ í•­ëª©ì„ ì €ì¥í•˜ê³  ìˆìŠµë‹ˆë‹¤.') {
            const overlay = document.createElement('div');
            overlay.className = 'loading-overlay';
            overlay.id = 'loadingOverlay';
            overlay.innerHTML = `
                <div class="loading-dialog">
                    <div class="big-spinner"></div>
                    <h3>${title}</h3>
                    <p>${message}</p>
                </div>
            `;
            document.body.appendChild(overlay);
        }
        
        function hideLoadingDialog() {
            debugLog('hideLoadingDialog í˜¸ì¶œë¨');
            const overlay = document.getElementById('loadingOverlay');
            if (overlay) {
                overlay.remove();
                debugLog('ë¡œë”© ì˜¤ë²„ë ˆì´ ì œê±° ì™„ë£Œ');
            } else {
                debugLog('ë¡œë”© ì˜¤ë²„ë ˆì´ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŒ');
                // ê°•ì œë¡œ ëª¨ë“  ë¡œë”© ì˜¤ë²„ë ˆì´ ì œê±°
                const allOverlays = document.querySelectorAll('.loading-overlay');
                allOverlays.forEach(o => o.remove());
                if (allOverlays.length > 0) {
                    debugLog(`${allOverlays.length}ê°œì˜ ì¶”ê°€ ë¡œë”© ì˜¤ë²„ë ˆì´ë¥¼ ê°•ì œ ì œê±°í•¨`);
                }
            }
        }

        function debugLog(message) {
            console.log('ğŸ› DEBUG:', message);
            const logElement = document.getElementById('searchLog');
            const timestamp = new Date().toLocaleTimeString();
            logElement.innerHTML += `[${timestamp}] ${message}<br>`;
            logElement.scrollTop = logElement.scrollHeight;
        }
        
        function showStatus(message, type = 'info') {
            const statusElement = document.getElementById('searchStatus');
            const messageElement = document.getElementById('statusMessage');
            
            messageElement.textContent = message;
            statusElement.style.display = 'block';
            statusElement.className = 'status-box status-' + type;
        }
        
        function displayResults(assemblies) {
            const tbody = document.getElementById('resultsBody');
            const resultsDiv = document.getElementById('searchResults');
            const titleElement = document.getElementById('resultsTitle');
            
            tbody.innerHTML = '';
            
            if (assemblies.length === 0) {
                showStatus('ê²€ìƒ‰ ê²°ê³¼ê°€ ì—†ìŠµë‹ˆë‹¤.', 'error');
                resultsDiv.style.display = 'none';
                return;
            }
            
            titleElement.textContent = `ê²€ìƒ‰ ê²°ê³¼ (${assemblies.length}ê°œ)`;
            resultsDiv.style.display = 'block';
            
            debugLog(`ì²« ë²ˆì§¸ í•­ëª©: ${JSON.stringify(assemblies[0], null, 2)}`);
            
            assemblies.forEach((assembly, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="checkbox-cell">
                        <input type="checkbox" class="item-checkbox" data-index="${index}" data-assembly='${JSON.stringify(assembly)}'>
                    </td>
                    <td>${assembly.assembly_code || 'N/A'}</td>
                    <td>${assembly.zone || 'N/A'}</td>
                    <td>${assembly.item || 'N/A'}</td>
                    <td style="text-align: right;">${assembly.weight_net || '0'}</td>
                    <td>${assembly.status || '-'}</td>
                    <td>${assembly.lastProcess || '-'}</td>
                `;
                tbody.appendChild(row);
            });
            
            updateSelectionHandlers();
            updateSelectionInfo();
            showStatus(`${assemblies.length}ê°œì˜ ì¡°ë¦½í’ˆì„ ì°¾ì•˜ìŠµë‹ˆë‹¤.`, 'success');
            debugLog(`ê²€ìƒ‰ ê²°ê³¼ í‘œì‹œ ì™„ë£Œ: ${assemblies.length}ê°œ`);
        }
        
        function updateSelectionHandlers() {
            document.querySelectorAll('.item-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', updateSelectionInfo);
            });
            
            document.getElementById('selectAllCheckbox').addEventListener('change', function() {
                const isChecked = this.checked;
                document.querySelectorAll('.item-checkbox').forEach(checkbox => {
                    checkbox.checked = isChecked;
                });
                updateSelectionInfo();
            });
        }
        
        function updateSelectionInfo() {
            const checkboxes = document.querySelectorAll('.item-checkbox:checked');
            const count = checkboxes.length;
            let totalWeight = 0;
            
            checkboxes.forEach(checkbox => {
                const assembly = JSON.parse(checkbox.dataset.assembly);
                totalWeight += parseFloat(assembly.weight_net || 0);
            });
            
            document.getElementById('selectedCount').textContent = count;
            document.getElementById('totalWeight').textContent = totalWeight.toFixed(2);
            document.getElementById('selectionInfo').style.display = count > 0 ? 'block' : 'none';
            document.getElementById('addToListBtn').disabled = count === 0;
            
            debugLog(`ì„ íƒ ì—…ë°ì´íŠ¸: ${count}ê°œ, ì´ ì¤‘ëŸ‰: ${totalWeight.toFixed(2)}kg`);
        }
        
        async function performSearch(searchTerm) {
            debugLog(`ê²€ìƒ‰ ì‹œì‘: "${searchTerm}"`);
            showStatus('ê²€ìƒ‰ ì¤‘...', 'loading');
            
            try {
                const response = await fetch('/api/search', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ query: searchTerm })
                });
                
                debugLog(`API ì‘ë‹µ: ${response.status}`);
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}`);
                }
                
                const data = await response.json();
                const assemblies = data.data || [];
                debugLog(`ì‘ë‹µ ë°ì´í„° ìˆ˜ì‹ : ${assemblies.length}ê°œ`);
                
                if (!data.success) {
                    throw new Error(data.error || 'ê²€ìƒ‰ ì‹¤íŒ¨');
                }
                
                displayResults(assemblies);
                
            } catch (error) {
                debugLog(`ê²€ìƒ‰ ì˜¤ë¥˜: ${error.message}`);
                showStatus(`ê²€ìƒ‰ ì˜¤ë¥˜: ${error.message}`, 'error');
                document.getElementById('searchResults').style.display = 'none';
            }
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            debugLog('ì¡°ë¦½í’ˆ ê²€ìƒ‰ í˜ì´ì§€ ë¡œë“œ ì™„ë£Œ');
            
            // í˜ì´ì§€ ë¡œë“œ ì‹œ ê¸°ì¡´ ë¡œë”© ë‹¤ì´ì–¼ë¡œê·¸ ì •ë¦¬
            const existingOverlays = document.querySelectorAll('.loading-overlay');
            if (existingOverlays.length > 0) {
                existingOverlays.forEach(overlay => overlay.remove());
                debugLog(`í˜ì´ì§€ ë¡œë“œ ì‹œ ${existingOverlays.length}ê°œì˜ ê¸°ì¡´ ë¡œë”© ì˜¤ë²„ë ˆì´ ì œê±°`);
            }
            
            function updateTime() {
                document.getElementById('currentTime').textContent = new Date().toLocaleString();
            }
            updateTime();
            setInterval(updateTime, 1000);
            
            const searchForm = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');
            const searchBtn = document.getElementById('searchBtn');
            
            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const searchTerm = searchInput.value.trim();
                if (searchTerm.length === 0) {
                    alert('ê²€ìƒ‰ì–´ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                    return;
                }
                
                if (!/^[0-9]{1,3}$/.test(searchTerm)) {
                    alert('ìˆ«ì 1-3ìë¦¬ë§Œ ì…ë ¥ ê°€ëŠ¥í•©ë‹ˆë‹¤.');
                    return;
                }
                
                searchBtn.textContent = 'ê²€ìƒ‰ ì¤‘...';
                searchBtn.disabled = true;
                
                performSearch(searchTerm).finally(() => {
                    searchBtn.textContent = 'ê²€ìƒ‰';
                    searchBtn.disabled = false;
                });
            });
            
            searchInput.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
            
            
            document.getElementById('addToListBtn').addEventListener('click', async function() {
                const selected = document.querySelectorAll('.item-checkbox:checked');
                const selectedData = Array.from(selected).map(cb => JSON.parse(cb.dataset.assembly));
                
                let totalWeight = 0;
                selectedData.forEach(item => totalWeight += parseFloat(item.weight_net || 0));
                
                debugLog(`ì €ì¥ ë¦¬ìŠ¤íŠ¸ ì¶”ê°€ ì‹œë„: ${selected.length}ê°œ, ${totalWeight.toFixed(2)}kg`);
                
                // ë¡œë”© ìŠ¤í”¼ë„ˆ í‘œì‹œ
                showLoadingDialog();
                debugLog('ë¡œë”© ë‹¤ì´ì–¼ë¡œê·¸ í‘œì‹œ ì™„ë£Œ');
                
                try {
                    debugLog('Fetch ìš”ì²­ ì‹œì‘...');
                    const response = await fetch('/api/save-list', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ items: selectedData })
                    });
                    
                    debugLog(`HTTP ì‘ë‹µ ìˆ˜ì‹ : ${response.status} ${response.statusText}`);
                    
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    
                    const result = await response.json();
                    debugLog(`ì‘ë‹µ JSON íŒŒì‹± ì™„ë£Œ: ${JSON.stringify(result)}`);
                    
                    if (result.success) {
                        debugLog('ì €ì¥ ì„±ê³µ - UI ì—…ë°ì´íŠ¸ ì‹œì‘');
                        debugLog(`ì €ì¥ ì™„ë£Œ: ì´ ${result.total}ê°œ í•­ëª©`);
                        
                        // ì €ì¥ëœ í•­ëª©ë“¤ì˜ ì²´í¬ë°•ìŠ¤ í•´ì œ ë° ê²€ìƒ‰ ê²°ê³¼ì—ì„œ ì œê±°
                        const savedAssemblyCodes = selectedData.map(item => item.assembly_code);
                        const remainingRows = Array.from(document.querySelectorAll('#resultsTable tbody tr')).filter(row => {
                            const checkbox = row.querySelector('.item-checkbox');
                            const assembly = JSON.parse(checkbox.dataset.assembly);
                            return !savedAssemblyCodes.includes(assembly.assembly_code);
                        });
                        
                        const tbody = document.getElementById('resultsBody');
                        tbody.innerHTML = '';
                        remainingRows.forEach(row => tbody.appendChild(row));
                        
                        // UI ì—…ë°ì´íŠ¸
                        updateSelectionInfo();
                        const remainingCount = remainingRows.length;
                        if (remainingCount === 0) {
                            document.getElementById('searchResults').style.display = 'none';
                            showStatus('ëª¨ë“  ê²€ìƒ‰ ê²°ê³¼ê°€ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
                        } else {
                            document.getElementById('resultsTitle').textContent = `ê²€ìƒ‰ ê²°ê³¼ (${remainingCount}ê°œ)`;
                            showStatus(`${selectedData.length}ê°œ í•­ëª©ì´ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.`, 'success');
                        }
                        
                        debugLog('UI ì—…ë°ì´íŠ¸ ì™„ë£Œ - ìŠ¤í”¼ë„ˆ ì œê±°');
                        // ì¦‰ì‹œ ìŠ¤í”¼ë„ˆ ì œê±°
                        hideLoadingDialog();
                    } else {
                        debugLog(`ì €ì¥ ì‹¤íŒ¨: ${result.error}`);
                        // ë¡œë”© ìˆ¨ê¸°ê¸°
                        hideLoadingDialog();
                        
                        alert(`âŒ ì €ì¥ ì‹¤íŒ¨: ${result.error}`);
                        debugLog(`ì €ì¥ ì‹¤íŒ¨: ${result.error}`);
                    }
                } catch (error) {
                    debugLog(`ì˜ˆì™¸ ë°œìƒ: ${error.name} - ${error.message}`);
                    // ë¡œë”© ìˆ¨ê¸°ê¸°
                    hideLoadingDialog();
                    
                    alert(`âŒ ì €ì¥ ì˜¤ë¥˜: ${error.message}`);
                    debugLog(`ì €ì¥ ì˜¤ë¥˜: ${error.message}`);
                }
            });
            
            searchInput.focus();
            debugLog('ëª¨ë“  ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì„¤ì • ì™„ë£Œ');
        });
    </script>
