                debugLog(`í˜ì´ì§€ ë¡œë“œ ì‹œ ${existingOverlays.length}ê°œì˜ ê¸°ì¡´ ë¡œë”© ì˜¤ë²„ë ˆì´ ì œê±°`);
            }
            
            function updateTime() {
                document.getElementById('currentTime').textContent = new Date().toLocaleString();
            }
            updateTime();
            setInterval(updateTime, 1000);
            
            const searchForm = document.getElementById('searchForm');
            const searchInput = document.getElementById('searchInput');
            const searchBtn = document.getElementById('searchBtn');
            
            searchForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const searchTerm = searchInput.value.trim();
                if (searchTerm.length === 0) {
                    alert('ê²€ìƒ‰ì–´ë¥¼ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                    return;
                }
                
                if (!/^[0-9]{1,3}$/.test(searchTerm)) {
                    alert('ìˆ«ì 1-3ìë¦¬ë§Œ ì…ë ¥ ê°€ëŠ¥í•©ë‹ˆë‹¤.');
                    return;
                }
                
                searchBtn.textContent = 'ê²€ìƒ‰ ì¤‘...';
                searchBtn.disabled = true;
                
                performSearch(searchTerm).finally(() => {
                    searchBtn.textContent = 'ê²€ìƒ‰';
                    searchBtn.disabled = false;
                });
            });
            
            searchInput.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^0-9]/g, '');
            });
            
            
            document.getElementById('addToListBtn').addEventListener('click', async function() {
                const selected = document.querySelectorAll('.item-checkbox:checked');
                const selectedData = Array.from(selected).map(cb => JSON.parse(cb.dataset.assembly));
                
                let totalWeight = 0;
                selectedData.forEach(item => totalWeight += parseFloat(item.weight_net || 0));
                
                debugLog(`ì €ì¥ ë¦¬ìŠ¤íŠ¸ ì¶”ê°€ ì‹œë„: ${selected.length}ê°œ, ${totalWeight.toFixed(2)}kg`);
                
                // ë¡œë”© ìŠ¤í”¼ë„ˆ í‘œì‹œ
                showLoadingDialog();
                debugLog('ë¡œë”© ë‹¤ì´ì–¼ë¡œê·¸ í‘œì‹œ ì™„ë£Œ');
                
                try {
                    debugLog('Fetch ìš”ì²­ ì‹œì‘...');
                    const response = await fetch('/api/save-list', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ items: selectedData })
                    });
                    
                    debugLog(`HTTP ì‘ë‹µ ìˆ˜ì‹ : ${response.status} ${response.statusText}`);
                    
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }
                    
                    const result = await response.json();
                    debugLog(`ì‘ë‹µ JSON íŒŒì‹± ì™„ë£Œ: ${JSON.stringify(result)}`);
                    
                    if (result.success) {
                        debugLog('ì €ì¥ ì„±ê³µ - UI ì—…ë°ì´íŠ¸ ì‹œì‘');
                        debugLog(`ì €ì¥ ì™„ë£Œ: ì´ ${result.total}ê°œ í•­ëª©`);
                        
                        // ì €ì¥ëœ í•­ëª©ë“¤ì˜ ì²´í¬ë°•ìŠ¤ í•´ì œ ë° ê²€ìƒ‰ ê²°ê³¼ì—ì„œ ì œê±°
                        const savedAssemblyCodes = selectedData.map(item => item.assembly_code);
                        const remainingRows = Array.from(document.querySelectorAll('#resultsTable tbody tr')).filter(row => {
                            const checkbox = row.querySelector('.item-checkbox');
                            const assembly = JSON.parse(checkbox.dataset.assembly);
                            return !savedAssemblyCodes.includes(assembly.assembly_code);
                        });
                        
                        const tbody = document.getElementById('resultsBody');
                        tbody.innerHTML = '';
                        remainingRows.forEach(row => tbody.appendChild(row));
                        
                        // UI ì—…ë°ì´íŠ¸
                        updateSelectionInfo();
                        const remainingCount = remainingRows.length;
                        if (remainingCount === 0) {
                            document.getElementById('searchResults').style.display = 'none';
                            showStatus('ëª¨ë“  ê²€ìƒ‰ ê²°ê³¼ê°€ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
                        } else {
                            document.getElementById('resultsTitle').textContent = `ê²€ìƒ‰ ê²°ê³¼ (${remainingCount}ê°œ)`;
                            showStatus(`${selectedData.length}ê°œ í•­ëª©ì´ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.`, 'success');
                        }
                        
                        debugLog('UI ì—…ë°ì´íŠ¸ ì™„ë£Œ - ìŠ¤í”¼ë„ˆ ì œê±°');
                        // ì¦‰ì‹œ ìŠ¤í”¼ë„ˆ ì œê±°
                        hideLoadingDialog();
                    } else {
                        debugLog(`ì €ì¥ ì‹¤íŒ¨: ${result.error}`);
                        // ë¡œë”© ìˆ¨ê¸°ê¸°
                        hideLoadingDialog();
                        
                        alert(`âŒ ì €ì¥ ì‹¤íŒ¨: ${result.error}`);
                        debugLog(`ì €ì¥ ì‹¤íŒ¨: ${result.error}`);
                    }
                } catch (error) {
                    debugLog(`ì˜ˆì™¸ ë°œìƒ: ${error.name} - ${error.message}`);
                    // ë¡œë”© ìˆ¨ê¸°ê¸°
                    hideLoadingDialog();
                    
                    alert(`âŒ ì €ì¥ ì˜¤ë¥˜: ${error.message}`);
                    debugLog(`ì €ì¥ ì˜¤ë¥˜: ${error.message}`);
                }
            });
            
            searchInput.focus();
            debugLog('ëª¨ë“  ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ì„¤ì • ì™„ë£Œ');
        });
    </script>
