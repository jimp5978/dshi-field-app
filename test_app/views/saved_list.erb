                                uploadExcelBtn.disabled = true;
                                uploadInfo.textContent = 'ğŸ’¡ Aì—´ì— Assembly Codeë¥¼ ì…ë ¥í•˜ì„¸ìš” (ìµœëŒ€ 100ê°œ)';
                                uploadInfo.style.color = '#666';
                                
                                // í˜ì´ì§€ ìƒˆë¡œê³ ì¹¨ìœ¼ë¡œ ì €ì¥ë¦¬ìŠ¤íŠ¸ ì—…ë°ì´íŠ¸
                                location.reload();
                            } else {
