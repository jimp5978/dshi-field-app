            if (selectedInfo) selectedInfo.textContent = `ì„ íƒëœ í•­ëª©: ${selected.length}ê°œ`;
            
            // ìš”ì•½ ì •ë³´ ë™ì  ì—…ë°ì´íŠ¸ (ë²„íŠ¼ êµ¬ì¡° ìœ ì§€)
            const summaryTextDiv = document.getElementById('summaryText');
            if (summaryTextDiv) {
