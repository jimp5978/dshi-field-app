            }

            const createInspectionBtn = document.getElementById('createInspectionBtn');
            if (createInspectionBtn) {
                createInspectionBtn.addEventListener('click', async function() {
                    const selected = document.querySelectorAll('.item-checkbox:checked');
                    const inspectionDate = document.getElementById('inspectionDate').value;
                    
                    if (selected.length === 0) {
                        alert('ê²€ì‚¬ì‹ ì²­í•  í•­ëª©ì„ ì„ íƒí•´ì£¼ì„¸ìš”.');
                        return;
                    }
                    
                    if (!inspectionDate) {
                        alert('ê²€ì‚¬ì‹ ì²­ì¼ì„ ì„ íƒí•´ì£¼ì„¸ìš”.');
                        return;
                    }
                    
                    const selectedData = Array.from(selected).map(cb => JSON.parse(cb.dataset.assembly));
                    
                    // ë‹¤ìŒ ê³µì • ê²€ì¦ (ProcessManagerì™€ ë™ì¼í•œ ë¡œì§)
                    const nextProcesses = selectedData.map(assembly => {
                        // ê³µì • ìˆœì„œì— ë”°ë¥¸ ë‹¤ìŒ ê³µì • ê³„ì‚°
                        const processes = ['fit_up_date', 'final_date', 'arup_final_date', 'galv_date', 'arup_galv_date', 'shot_date', 'paint_date', 'arup_paint_date'];
                        const processNames = ['FIT_UP', 'FINAL', 'ARUP_FINAL', 'GALV', 'ARUP_GALV', 'SHOT', 'PAINT', 'ARUP_PAINT'];
                        
                        for (let i = 0; i < processes.length; i++) {
                            const date = assembly[processes[i]];
                            
                            // 1900-01-01ì¸ ê²½ìš° ë¶ˆí•„ìš”í•œ ê³µì •ìœ¼ë¡œ ê±´ë„ˆë›°ê¸°
                            if (date && (date.includes('1900') || date === '1900-01-01')) {
                                continue;
                            }
                            
                            // ë‚ ì§œê°€ ì—†ê±°ë‚˜ ë¹„ì–´ìˆëŠ” ê²½ìš° ë¯¸ì™„ë£Œ ê³µì •
                            if (!date || date === '') {
                                return processNames[i];
                            }
                            
                            // ì‹¤ì œ ë‚ ì§œê°€ ìˆëŠ” ê²½ìš° ì™„ë£Œëœ ê³µì •ì´ë¯€ë¡œ ê³„ì† ì§„í–‰
                        }
                        return null; // ëª¨ë“  ê³µì • ì™„ë£Œ
                    });
                    
                    const uniqueProcesses = [...new Set(nextProcesses.filter(p => p !== null))];
                    
                    // ëª¨ë“  í•­ëª©ì´ ì™„ë£Œëœ ê²½ìš°
                    if (uniqueProcesses.length === 0) {
                        alert('âŒ ê²€ì‚¬ì‹ ì²­ ë¶ˆê°€\nì„ íƒí•œ í•­ëª©ë“¤ì€ ì´ë¯¸ ëª¨ë“  ê³µì •ì´ ì™„ë£Œë˜ì—ˆìŠµë‹ˆë‹¤.');
                        return;
                    }
                    
                    if (uniqueProcesses.length > 1) {
                        const processNames = uniqueProcesses.map(p => {
                            switch(p) {
                                case 'FIT_UP': return 'FIT-UP ê²€ì‚¬';
                                case 'FINAL': return 'FINAL ê²€ì‚¬';
                                case 'ARUP_FINAL': return 'ARUP FINAL ê²€ì‚¬';
                                case 'GALV': return 'GALV ê²€ì‚¬';
                                case 'ARUP_GALV': return 'ARUP GALV ê²€ì‚¬';
                                case 'SHOT': return 'SHOT ê²€ì‚¬';
                                case 'PAINT': return 'PAINT ê²€ì‚¬';
                                case 'ARUP_PAINT': return 'ARUP PAINT ê²€ì‚¬';
                                default: return p;
                            }
                        }).join(', ');

                        alert(`âŒ ê²€ì‚¬ì‹ ì²­ ì˜¤ë¥˜\nì„ íƒëœ ì¡°ë¦½í’ˆë“¤ì˜ ë‹¤ìŒ ê³µì •ì´ ë‹¤ë¦…ë‹ˆë‹¤.\në™ì¼í•œ ê³µì •ì˜ ì¡°ë¦½í’ˆë§Œ ì„ íƒí•´ì£¼ì„¸ìš”.\në‹¤ìŒ ê³µì •ë“¤: ${processNames}`);
                        return;
