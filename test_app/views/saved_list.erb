                    } catch (error) {
                        uploadProgress.style.display = 'none';
                        progressBar.style.width = '0%';
                        uploadExcelBtn.disabled = false;
                        alert(`âŒ ì—…ë¡œë“œ ì˜¤ë¥˜: ${error.message}`);
                    }
