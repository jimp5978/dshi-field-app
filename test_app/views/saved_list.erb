                            uploadExcelBtn.disabled = false;

                            if (result.success) {
                                const data = result.data;
                                let message = `âœ… Excel ì—…ë¡œë“œ ì™„ë£Œ!\n\n`;
                                message += `ğŸ“Š ì²˜ë¦¬ ê²°ê³¼:\n`;
                                message += `â€¢ ì—…ë¡œë“œëœ í•­ëª©: ${data.total_uploaded}ê°œ\n`;
                                message += `â€¢ ì„±ê³µ: ${data.valid_count}ê°œ (ì €ì¥ë¦¬ìŠ¤íŠ¸ì— ì¶”ê°€ë¨)\n`;
                                message += `â€¢ ì‹¤íŒ¨: ${data.invalid_count}ê°œ\n`;
                                
                                if (data.saved_count > 0) {
                                    message += `â€¢ ì‹ ê·œ ì¶”ê°€: ${data.saved_count}ê°œ\n`;
                                }
                                if (data.updated_count > 0) {
