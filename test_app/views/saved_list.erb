                        return;
                    }

                    // ì§„í–‰ë¥  í‘œì‹œ ì‹œì‘
                    uploadProgress.style.display = 'block';
                    uploadExcelBtn.disabled = true;
                    progressText.textContent = 'ğŸ“Š Excel íŒŒì¼ ì—…ë¡œë“œ ì¤‘...';
                    progressBar.style.width = '20%';

                    try {
                        const formData = new FormData();
                        formData.append('excel_file', file);

                        // ì‹œë®¬ë ˆì´ì…˜: íŒŒì¼ ì—…ë¡œë“œ ì§„í–‰ë¥ 
                        setTimeout(() => {
                            progressText.textContent = 'ğŸ“Š Excel íŒŒì¼ íŒŒì‹± ì¤‘...';
                            progressBar.style.width = '40%';
                        }, 500);

                        setTimeout(() => {
                            progressText.textContent = 'ğŸ“Š Assembly Code ê²€ì¦ ì¤‘...';
                            progressBar.style.width = '60%';
                        }, 1500);

                        const response = await fetch('/api/upload-excel', {
                            method: 'POST',
                            body: formData
                        });

                        progressText.textContent = 'ğŸ“Š ë°ì´í„° ì²˜ë¦¬ ì¤‘...';
                        progressBar.style.width = '80%';

                        const result = await response.json();

                        progressText.textContent = 'ğŸ“Š ì™„ë£Œ ì²˜ë¦¬ ì¤‘...';
                        progressBar.style.width = '100%';

                        setTimeout(() => {
