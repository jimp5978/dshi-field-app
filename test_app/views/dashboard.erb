.process-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.process-item {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.process-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
}

.process-name {
  font-weight: 500;
  color: #333;
}

.process-percentage {
  font-weight: bold;
  color: #667eea;
}

.process-bar {
  height: 8px;
  background: #e9ecef;
  border-radius: 4px;
  overflow: hidden;
}

.process-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 4px;
  transition: width 0.3s ease;
}

/* ITEM별 공정율 탭 스타일 */
.tab-header {
  display: flex;
  margin-bottom: 15px;
  border-bottom: 1px solid #e1e8ed;
}

.tab-btn {
  background: none;
  border: none;
  padding: 10px 20px;
  font-size: 14px;
  font-weight: 500;
  color: #666;
  cursor: pointer;
  border-bottom: 2px solid transparent;
  transition: all 0.3s;
}

.tab-btn:hover {
  color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.tab-btn.active {
  color: #667eea;
  border-bottom-color: #667eea;
  background: rgba(102, 126, 234, 0.1);
}

.tab-content {
  position: relative;
}

.tab-pane {
  display: none;
}

.tab-pane.active {
  display: block;
}

/* 월별 진행률 */
.progress-summary {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.progress-bar-container {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.progress-bar {
  height: 20px;
  background: #e9ecef;
  border-radius: 10px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #28a745, #20c997);
  border-radius: 10px;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-weight: bold;
  color: #333;
}

.progress-details {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
}

.detail-item {
  text-align: center;
  padding: 10px;
  background: #f8f9fa;
  border-radius: 6px;
}

.detail-label {
  display: block;
  font-size: 12px;
  color: #666;
  margin-bottom: 3px;
}

.detail-value {
  font-weight: bold;
  color: #333;
}

/* 업체별 분포 */
.company-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.company-item {
  padding: 12px;
  background: #f8f9fa;
  border-radius: 8px;
  border-left: 4px solid #667eea;
}

.company-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
}

.company-name {
  font-weight: 600;
  color: #333;
  font-size: 15px;
}

.company-percentage {
  font-weight: bold;
  color: #667eea;
  font-size: 14px;
}

.company-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  color: #666;
}

.company-count {
  background: #e9ecef;
  padding: 2px 8px;
  border-radius: 4px;
  font-weight: 500;
}

.company-weight {
  background: #e7f3ff;
  color: #0066cc;
  padding: 2px 8px;
  border-radius: 4px;
  font-weight: 500;
}

/* 데이터 소스 */
.source-info {
  font-size: 14px;
  line-height: 1.6;
}

.source-info p {
  margin: 0 0 8px 0;
}

.refresh-actions {
  margin-top: 15px;
  text-align: center;
}

.refresh-btn {
  background: #667eea;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
  transition: background-color 0.2s;
}

.refresh-btn:hover {
  background: #5a6fd8;
}

/* 반응형 디자인 */
@media (max-width: 768px) {
  .dashboard-grid {
    grid-template-columns: 1fr;
    padding: 15px;
  }
  
  .header-content {
    flex-direction: column;
    text-align: center;
    gap: 10px;
  }
  
  .overview-stats {
    grid-template-columns: 1fr;
  }
  
  .progress-details {
    grid-template-columns: 1fr;
  }
}
</style>

<script>
// 자동 새로고침 제거됨 - 수동 새로고침 버튼 사용
// 향후 하루 특정 시간에 새로고침 로직 추가 예정

// 페이지 로드 완료 알림
console.log('DSHI Dashboard loaded at: ' + new Date().toLocaleString());

// 탭 전환 기능
document.addEventListener('DOMContentLoaded', function() {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');
    
    tabBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const targetTab = this.getAttribute('data-tab');
            
            // 모든 탭 버튼에서 active 클래스 제거
            tabBtns.forEach(b => b.classList.remove('active'));
            // 모든 탭 패널에서 active 클래스 제거
            tabPanes.forEach(p => p.classList.remove('active'));
            
            // 클릭된 탭 버튼에 active 클래스 추가
            this.classList.add('active');
            // 해당 탭 패널에 active 클래스 추가
            const targetPane = document.getElementById('tab-' + targetTab);
            if (targetPane) {
                targetPane.classList.add('active');
            }
        });
    });
});
</script>

</body>
</html>