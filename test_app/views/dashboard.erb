<%
# 대시보드 데이터 설정 (실제 API 데이터)
data = @dashboard_data || {}
total_assemblies = data["total_assemblies"] || 0
total_weight = data["total_weight"] || 0
process_completion = data["process_completion"] || {}
status_distribution = data["status_distribution"] || {}
monthly_progress = data["monthly_progress"] || {}
company_distribution = data["company_distribution"] || []
item_process_completion = data["item_process_completion"] || {}
last_updated = data["last_updated"] || Time.now.strftime('%Y-%m-%d %H:%M:%S')
source = data["source"] || "Database"
%>

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DSHI 대시보드</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f5f5;
            min-height: 100vh;
        }
    </style>
</head>
<body>

<div class="dashboard-container">
  <!-- 헤더 -->
  <div class="header">
    <div class="header-content">
      <div style="display: flex; align-items: center;">
        <h1 style="margin: 0;">DSHI</h1>
      </div>
      <div class="user-info">
        👤 <%= @user_info['username'] %>님 (Level <%= @user_info['permission_level'] %>)
        <a href="/search" class="nav-btn">🔍 검색</a>
        <a href="/saved-list" class="nav-btn">📋 저장된 리스트</a>
        <a href="/inspection-management" class="nav-btn">📝 검사신청 관리</a>
        <a href="/logout" class="logout-btn">로그아웃</a>
      </div>
    </div>
  </div>

  <!-- 에러 메시지 -->
  <% if @error_message %>
  <div class="error-message">
    <h3>⚠️ 오류 발생</h3>
    <p><strong>메시지:</strong> <%= @error_message %></p>
    <div class="error-actions">
      <button onclick="location.reload()" class="btn btn-primary">🔄 새로고침</button>
      <button onclick="location.href='/login'" class="btn btn-secondary">🔑 다시 로그인</button>
    </div>
  </div>
  <% end %>

  <!-- 대시보드 그리드 -->
  <div class="dashboard-grid">
    <!-- 전체 현황 -->
    <div class="dashboard-card overview">
      <h2>📊 전체 현황</h2>
      <div class="overview-stats">
        <div class="stat-item">
          <div class="stat-number"><%= total_assemblies.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></div>
          <div class="stat-label">총 조립품</div>
        </div>
        <div class="stat-item">
          <div class="stat-number"><%= sprintf("%.1f", total_weight.to_f / 1000) %>K</div>
          <div class="stat-label">총 중량(톤)</div>
        </div>
        <div class="stat-item">
          <div class="stat-number"><%= monthly_progress["percentage"] || 0 %>%</div>
          <div class="stat-label">전체 진행률</div>
        </div>
      </div>
    </div>

    <!-- 8단계 공정별 완료율 (중량 기준) -->
    <div class="dashboard-card process-completion">
      <h2>⚙️ 8단계 공정별 완료율 (중량 기준)</h2>
      <div class="process-list">
        <% 
          process_names = {
            'FIT_UP' => 'FIT-UP',
            'FINAL' => 'FINAL', 
            'ARUP_FINAL' => 'ARUP FINAL',
            'GALV' => 'GALV',
            'ARUP_GALV' => 'ARUP GALV',
            'SHOT' => 'SHOT',
            'PAINT' => 'PAINT',
            'ARUP_PAINT' => 'ARUP PAINT'
          }
          process_names.each do |key, display_name| 
        %>
        <div class="process-item">
          <div class="process-info">
            <span class="process-name"><%= display_name %></span>
            <span class="process-percentage"><%= process_completion[key] || 0 %>%</span>
          </div>
          <div class="process-bar">
            <div class="process-fill" style="width: <%= process_completion[key] || 0 %>%"></div>
          </div>
        </div>
        <% end %>
      </div>
    </div>

    <!-- ITEM별 공정율 (탭 구성) -->
    <div class="dashboard-card item-process-completion">
      <h2>📈 ITEM별 공정율</h2>
      
      <!-- 탭 헤더 -->
      <div class="tab-header">
        <button class="tab-btn active" data-tab="BEAM">BEAM</button>
        <button class="tab-btn" data-tab="POST">POST</button>
      </div>
      
      <!-- 탭 콘텐츠 -->
      <div class="tab-content">
        <!-- BEAM 탭 -->
        <div class="tab-pane active" id="tab-BEAM">
          <div class="process-list">
            <% 
              process_names = {
                'FIT_UP' => 'FIT-UP',
                'FINAL' => 'FINAL', 
                'ARUP_FINAL' => 'ARUP FINAL',
                'GALV' => 'GALV',
                'ARUP_GALV' => 'ARUP GALV',
                'SHOT' => 'SHOT',
                'PAINT' => 'PAINT',
                'ARUP_PAINT' => 'ARUP PAINT'
              }
              beam_processes = item_process_completion["BEAM"] || {}
              process_names.each do |key, display_name| 
            %>
            <div class="process-item">
              <div class="process-info">
                <span class="process-name"><%= display_name %></span>
                <span class="process-percentage"><%= beam_processes[key] || 0 %>%</span>
              </div>
              <div class="process-bar">
                <div class="process-fill" style="width: <%= beam_processes[key] || 0 %>%"></div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        
        <!-- POST 탭 -->
        <div class="tab-pane" id="tab-POST">
          <div class="process-list">
            <% 
              post_processes = item_process_completion["POST"] || {}
              process_names.each do |key, display_name| 
            %>
            <div class="process-item">
              <div class="process-info">
                <span class="process-name"><%= display_name %></span>
                <span class="process-percentage"><%= post_processes[key] || 0 %>%</span>
              </div>
              <div class="process-bar">
                <div class="process-fill" style="width: <%= post_processes[key] || 0 %>%"></div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- 전체 진행률 (중량 기준) -->
    <div class="dashboard-card monthly-progress">
      <h2>📅 전체 진행률 (중량 기준)</h2>
      <div class="progress-summary">
        <div class="progress-bar-container">
          <div class="progress-bar">
            <div class="progress-fill" style="width: <%= monthly_progress["percentage"] || 0 %>%"></div>
          </div>
          <div class="progress-text"><%= monthly_progress["percentage"] || 0 %>% 완료</div>
        </div>
        <div class="progress-details">
          <div class="detail-item">
            <span class="detail-label">전체 중량:</span>
            <span class="detail-value"><%= sprintf("%.1f", (monthly_progress["planned"] || 0).to_f / 1000) %>K톤</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">완료 중량:</span>
            <span class="detail-value"><%= sprintf("%.1f", (monthly_progress["completed"] || 0).to_f / 1000) %>K톤</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">잔여 중량:</span>
            <span class="detail-value"><%= sprintf("%.1f", (monthly_progress["remaining"] || 0).to_f / 1000) %>K톤</span>
          </div>
        </div>
      </div>
    </div>

    <!-- 업체별 분포 -->
    <div class="dashboard-card company-distribution">
      <h2>🏢 업체별 분포 (중량 기준)</h2>
      <div class="company-list">
        <% company_distribution.each_with_index do |company, index| %>
          <% next if index >= 8 %> <!-- 상위 8개 업체만 표시 -->
          <div class="company-item">
            <div class="company-info">
              <span class="company-name"><%= company['company'] %></span>
              <span class="company-percentage"><%= company['percentage'] %>%</span>
            </div>
            <div class="company-details">
              <span class="company-count"><%= company['count'] %>개</span>
              <span class="company-weight"><%= sprintf("%.1f", company['total_weight'].to_f / 1000) %>K톤</span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 데이터 소스 정보 -->
    <div class="dashboard-card data-source">
      <h2>💾 데이터 소스</h2>
      <div class="source-info">
        <p><strong>소스:</strong> <%= source %></p>
        <p><strong>업데이트:</strong> <%= last_updated %></p>
        <p><strong>총 조립품:</strong> <%= total_assemblies.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %>개</p>
        <p><strong>총 중량:</strong> <%= sprintf("%.2f", total_weight.to_f) %>톤</p>
        <div class="refresh-actions">
          <button onclick="location.reload()" class="refresh-btn">🔄 새로고침</button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>

