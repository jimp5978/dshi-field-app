<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// ìë™ ìƒˆë¡œê³ ì¹¨ ì œê±°ë¨ - ìˆ˜ë™ ìƒˆë¡œê³ ì¹¨ ë²„íŠ¼ ì‚¬ìš©
// í–¥í›„ í•˜ë£¨ íŠ¹ì • ì‹œê°„ì— ìƒˆë¡œê³ ì¹¨ ë¡œì§ ì¶”ê°€ ì˜ˆì •

// í˜ì´ì§€ ë¡œë“œ ì™„ë£Œ ì•Œë¦¼
console.log('DSHI Dashboard loaded at: ' + new Date().toLocaleString());

// íƒ­ ì „í™˜ ê¸°ëŠ¥
document.addEventListener('DOMContentLoaded', function() {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');
    
    tabBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const targetTab = this.getAttribute('data-tab');
            
            // ëª¨ë“  íƒ­ ë²„íŠ¼ì—ì„œ active í´ë˜ìŠ¤ ì œê±°
            tabBtns.forEach(b => b.classList.remove('active'));
            // ëª¨ë“  íƒ­ íŒ¨ë„ì—ì„œ active í´ë˜ìŠ¤ ì œê±°
            tabPanes.forEach(p => p.classList.remove('active'));
            
            // í´ë¦­ëœ íƒ­ ë²„íŠ¼ì— active í´ë˜ìŠ¤ ì¶”ê°€
            this.classList.add('active');
            // í•´ë‹¹ íƒ­ íŒ¨ë„ì— active í´ë˜ìŠ¤ ì¶”ê°€
            const targetPane = document.getElementById('tab-' + targetTab);
            if (targetPane) {
                targetPane.classList.add('active');
            }
        });
    });

  // ì—…ì²´ë³„ ë„ë„› ì°¨íŠ¸ ë°ì´í„° ì¤€ë¹„
  const companyData = [
    <% company_distribution.each_with_index do |company, index| %>
      <% next if index >= 8 %>
      {
        label: "<%= company['company'] %>",
        value: <%= company['total_weight'].to_f %>,
        percentage: <%= company['percentage'].to_f %>
      },
    <% end %>
  ];

  const colors = [
    '#72dfaf', '#3a8ca8', '#174a6a' ];

  // ë„ë„› ì°¨íŠ¸ ìƒì„±
  const ctx = document.getElementById('companyDonutChart').getContext('2d');
  const donutChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: companyData.map(c => c.label),
      datasets: [{
        data: companyData.map(c => c.value),
        backgroundColor: colors,
      }]
    },
    options: {
      plugins: {
        legend: { display: false },
        tooltip: {
          callbacks: {
            label: function(context) {
              const idx = context.dataIndex;
              const label = context.label || '';
              const value = context.parsed || 0;
              const percent = companyData[idx]?.percentage || 0;
              return `${label}: ${percent.toFixed(1)}% (${value.toLocaleString()}í†¤)`;
            }
          }
        }
      }
    }
  });

  // ë²”ë¡€ ìƒì„±
  const legendDiv = document.getElementById('companyDonutLegend');
  legendDiv.innerHTML = companyData.map((c, i) => `
    <div class="donut-chart-legend-item">
      <span class="donut-chart-legend-color" style="background:${colors[i]}"></span>
      ${c.label} <span style="color:#479bbc;font-weight:600;">${c.percentage.toFixed(1)}%</span>
    </div>
  `).join('');

  document.getElementById('donutCenterLabel').innerHTML = '';

});
</script>

