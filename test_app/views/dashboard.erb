<%
# 대시보드 데이터 설정 (실제 API 데이터)
data = @dashboard_data || {}

# 데이터 구조 확인 및 처리
overall_stats = data["overall_stats"] || {}
total_assemblies = overall_stats["total_assemblies"] || 0
total_weight = overall_stats["total_weight"] || 0

process_completion = data["process_completion"] || {}
item_process_completion = data["item_process_completion"] || {}
company_distribution = data["company_distribution"] || []

# overall_progress 처리
overall_progress = overall_stats["overall_progress"] || 0

# 전체 진행률 정보 구성
monthly_progress = {
  "percentage" => overall_progress,
  "planned" => total_weight,
  "completed" => (total_weight * overall_progress / 100).to_f,
  "remaining" => (total_weight * (100 - overall_progress) / 100).to_f
}

# 데이터 소스 정보
data_source = data["data_source"] || {}
last_updated = data_source["updated_at"] || Time.now.strftime('%Y-%m-%d %H:%M:%S')
source = "Database"
%>

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DSHI</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body class="dashboard-page">

<div class="dashboard-container">
  <!-- 헤더 -->
  <div class="header">
    <div class="header-content">
      <div style="display: flex; align-items: center;">
        <h1 style="margin: 0;">DSHI</h1>
      </div>
      <div class="user-info">
        👤 <%= @user_info['username'] %>님 (Level <%= @user_info['permission_level'] %>)
        <a href="/search" class="nav-btn">🔍 검색</a>
        <a href="/saved-list" class="nav-btn">📋 저장된 리스트</a>
        <a href="/inspection-management" class="nav-btn">📝 검사신청 관리</a>
        <a href="/logout" class="logout-btn">로그아웃</a>
      </div>
    </div>
  </div>

  <!-- 에러 메시지 -->
  <% if @error_message %>
  <div class="error-message">
    <h3>⚠️ 오류 발생</h3>
    <p><strong>메시지:</strong> <%= @error_message %></p>
    <div class="error-actions">
      <button onclick="location.reload()" class="btn btn-primary">🔄 새로고침</button>
      <button onclick="location.href='/login'" class="btn btn-secondary">🔑 다시 로그인</button>
    </div>
  </div>
  <% end %>

  <!-- 대시보드 그리드 -->
  <div class="dashboard-grid">
    <!-- 전체 현황 -->
    <div class="dashboard-card overview">
      <h2>📊 전체 현황</h2>
      <div class="overview-stats">
        <div class="stat-item">
          <div class="stat-number"><%= total_assemblies.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %></div>
          <div class="stat-label">총 수량</div>
        </div>
        <div class="stat-item">
          <div class="stat-number"><%= sprintf("%.1f", total_weight.to_f / 1000) %>K</div>
          <div class="stat-label">총 중량(톤)</div>
        </div>
      </div>
    <div class="progress-summary">
        <div class="progress-bar-container">
          <div class="progress-bar">
            <div class="progress-fill" style="width: <%= monthly_progress["percentage"] || 0 %>%"></div>
          </div>
          <div class="progress-text"><%= monthly_progress["percentage"] || 0 %>% 완료</div>
        </div>
        <div class="progress-details">
          <div class="detail-item">
            <span class="detail-label">완료 중량:</span>
            <span class="detail-value"><%= sprintf("%.1f", (monthly_progress["completed"] || 0).to_f / 1000) %>K톤</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">잔여 중량:</span>
            <span class="detail-value"><%= sprintf("%.1f", (monthly_progress["remaining"] || 0).to_f / 1000) %>K톤</span>
          </div>
        </div>
      </div>
    <div class="donut-chart-container">
        <canvas id="companyDonutChart" class="donut-chart-canvas"></canvas>
        <div class="donut-chart-center-label" id="donutCenterLabel">
        </div>
        <div class="donut-chart-legend" id="companyDonutLegend"></div>
      </div>  
    </div>
    
    <!-- 8단계 공정별 완료율 (중량 기준) -->
    <div class="dashboard-card process-completion">
      <h2>⚙️ ARUP 공정율 (중량 기준)</h2>
      <div class="process-list">
        <% 
          process_names = {
            'FIT_UP' => 'FIT-UP',
            'FINAL' => 'FINAL', 
            'ARUP_FINAL' => 'ARUP FINAL',
            'GALV' => 'GALV',
            'ARUP_GALV' => 'ARUP GALV',
            'SHOT' => 'SHOT',
            'PAINT' => 'PAINT',
            'ARUP_PAINT' => 'ARUP PAINT'
          }
          process_names.each do |key, display_name| 
        %>
        <div class="process-item">
          <div class="process-info">
            <span class="process-name"><%= display_name %></span>
            <span class="process-percentage"><%= process_completion[key] || 0 %>%</span>
          </div>
          <div class="process-bar">
            <div class="process-fill" style="width: <%= process_completion[key] || 0 %>%"></div>
          </div>
        </div>
        <% end %>
      </div>
    </div>

    <!-- ITEM별 공정율 (탭 구성) -->
    <div class="dashboard-card item-process-completion">
      <h2>📈 ITEM별 공정율</h2>
      
      <!-- 탭 헤더 -->
      <div class="tab-header">
        <button class="tab-btn active" data-tab="BEAM">BEAM</button>
        <button class="tab-btn" data-tab="POST">POST</button>
      </div>
      
      <!-- 탭 콘텐츠 -->
      <div class="tab-content">
        <!-- BEAM 탭 -->
        <div class="tab-pane active" id="tab-BEAM">
          <div class="process-list">
            <% 
              process_names = {
                'FIT_UP' => 'FIT-UP',
                'FINAL' => 'FINAL', 
                'ARUP_FINAL' => 'ARUP FINAL',
                'GALV' => 'GALV',
                'ARUP_GALV' => 'ARUP GALV',
                'SHOT' => 'SHOT',
                'PAINT' => 'PAINT',
                'ARUP_PAINT' => 'ARUP PAINT'
              }
              beam_processes = item_process_completion["BEAM"] || {}
              process_names.each do |key, display_name| 
            %>
            <div class="process-item">
              <div class="process-info">
                <span class="process-name"><%= display_name %></span>
                <span class="process-percentage"><%= beam_processes[key] || 0 %>%</span>
              </div>
              <div class="process-bar">
                <div class="process-fill" style="width: <%= beam_processes[key] || 0 %>%"></div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        
        <!-- POST 탭 -->
        <div class="tab-pane" id="tab-POST">
          <div class="process-list">
            <% 
              post_processes = item_process_completion["POST"] || {}
              process_names.each do |key, display_name| 
            %>
            <div class="process-item">
              <div class="process-info">
                <span class="process-name"><%= display_name %></span>
                <span class="process-percentage"><%= post_processes[key] || 0 %>%</span>
              </div>
              <div class="process-bar">
                <div class="process-fill" style="width: <%= post_processes[key] || 0 %>%"></div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- 업체별 분포
    <div class="dashboard-card company-distribution">
      <h2>🏢 업체별 분포 (중량 기준)</h2>
      <div class="donut-chart-container">
        <canvas id="companyDonutChart" class="donut-chart-canvas"></canvas>
        <div class="donut-chart-center-label" id="donutCenterLabel">
        </div>
        <div class="donut-chart-legend" id="companyDonutLegend"></div>
      </div>
    </div> -->
</div> <!-- dashboard-container 끝 -->

<!-- 데이터 소스 정보를 컨테이너 아래 한 줄로 표시 -->
<div class="data-source-inline">
  <span style="font-size:16px; color:#174a6a; vertical-align:middle;">
    <strong>업데이트:</strong> <%= last_updated %>
  </span>
  <!-- <button class="refresh-btn">🔄 새로고침</button> -->
</div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// 자동 새로고침 제거됨 - 수동 새로고침 버튼 사용
// 향후 하루 특정 시간에 새로고침 로직 추가 예정

// 페이지 로드 완료 알림
console.log('DSHI Dashboard loaded at: ' + new Date().toLocaleString());

// 탭 전환 기능
document.addEventListener('DOMContentLoaded', function() {
    const tabBtns = document.querySelectorAll('.tab-btn');
    const tabPanes = document.querySelectorAll('.tab-pane');
    
    tabBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const targetTab = this.getAttribute('data-tab');
            
            // 모든 탭 버튼에서 active 클래스 제거
            tabBtns.forEach(b => b.classList.remove('active'));
            // 모든 탭 패널에서 active 클래스 제거
            tabPanes.forEach(p => p.classList.remove('active'));
            
            // 클릭된 탭 버튼에 active 클래스 추가
            this.classList.add('active');
            // 해당 탭 패널에 active 클래스 추가
            const targetPane = document.getElementById('tab-' + targetTab);
            if (targetPane) {
                targetPane.classList.add('active');
            }
        });
    });

  // 업체별 도넛 차트 데이터 준비
  const companyData = [
    <% company_distribution.each_with_index do |company, index| %>
      <% next if index >= 8 %>
      {
        label: "<%= company['company'] %>",
        value: <%= company['total_weight'].to_f %>,
        percentage: <%= company['percentage'].to_f %>
      },
    <% end %>
  ];

  const colors = [
    '#72dfaf', '#3a8ca8', '#174a6a' ];

  // 도넛 차트 생성
  const ctx = document.getElementById('companyDonutChart').getContext('2d');
  const donutChart = new Chart(ctx, {
    type: 'doughnut',
    data: {
      labels: companyData.map(c => c.label),
      datasets: [{
        data: companyData.map(c => c.value),
        backgroundColor: colors,
      }]
    },
    options: {
      plugins: {
        legend: { display: false },
        tooltip: {
          callbacks: {
            label: function(context) {
              const idx = context.dataIndex;
              const label = context.label || '';
              const value = context.parsed || 0;
              const percent = companyData[idx]?.percentage || 0;
              return `${label}: ${percent.toFixed(1)}% (${value.toLocaleString()}톤)`;
            }
          }
        }
      }
    }
  });

  // 범례 생성
  const legendDiv = document.getElementById('companyDonutLegend');
  legendDiv.innerHTML = companyData.map((c, i) => `
    <div class="donut-chart-legend-item">
      <span class="donut-chart-legend-color" style="background:${colors[i]}"></span>
      ${c.label} <span style="color:#479bbc;font-weight:600;">${c.percentage.toFixed(1)}%</span>
    </div>
  `).join('');

  document.getElementById('donutCenterLabel').innerHTML = '';

});
</script>

</body>
</html>