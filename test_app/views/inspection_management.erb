        // ë‚ ì§œ í¬ë§·íŒ… í•¨ìˆ˜ (YYYY-MM-DD í˜•ì‹ìœ¼ë¡œ ë³€í™˜)
        function formatDate(dateString) {
            if (!dateString || dateString === '-' || dateString === 'null' || dateString === null) {
                return '-';
            }
            
            try {
                const date = new Date(dateString);
                if (isNaN(date.getTime())) {
                    return dateString; // íŒŒì‹± ì‹¤íŒ¨ì‹œ ì›ë³¸ ë°˜í™˜
                }
                
                const year = date.getFullYear();
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const day = String(date.getDate()).padStart(2, '0');
                
                return `${year}-${month}-${day}`;
            } catch (error) {
                return dateString; // ì—ëŸ¬ì‹œ ì›ë³¸ ë°˜í™˜
            }
        }

        // í˜ì´ì§€ ë¡œë“œ ì‹œ ë°ì´í„° ë¶ˆëŸ¬ì˜¤ê¸°
        document.addEventListener('DOMContentLoaded', loadInspectionRequests);

        // í˜„ì¬ ì‚¬ìš©ì ê¶Œí•œ ë ˆë²¨ ì „ì—­ ë³€ìˆ˜
