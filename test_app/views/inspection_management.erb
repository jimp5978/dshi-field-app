            } finally {
                // 로딩 스피너 숨김
                hideLoadingDialog();
                
                // 버튼 다시 활성화
                if (cancelBtn) cancelBtn.disabled = false;
                
                // 선택 상태 업데이트
                updateSelectionButtons();
            }
        }
