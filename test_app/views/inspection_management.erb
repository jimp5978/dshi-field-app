                    try {
                        const response = await fetch(`/api/inspection-management/requests/${requestId}/cancel`, {
                            method: 'PUT',
                            headers: { 'Content-Type': 'application/json' }
                        });
                        
                        const result = await response.json();
                        if (result.success) {
